{
    "manifest_version": 2,

    "name": "cr24Sauce",
    "description": "Get some sauce.",
    "version": "1.0",

    "content_scripts": [
        {   
                    "matches": ["http://*/*", "https://*/*"],
            "exclude_matches": ["*://*.wikipedia.org/*",
                                "*://*/*.jpg", "*://*/*.jpeg", "*://*/*.png"],
                        "css": ["style.css"],
                         "js": ["jquery.js", "content_scripts/processImages.js"]
        },
        {   
            "matches": ["*://*/*.jpg", "*://*/*.jpeg", "*://*/*.png"],
                "css": ["style.css"],
                 "js": ["jquery.js", "content_scripts/detailImage.js"]
        }
    ],

    "web_accessible_resources": ["style.css"]
}

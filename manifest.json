{
    "manifest_version": 2,

    "name": "cr24Sauce",
    "description": "Get some sauce.",
    "version": "1.0",

    "content_scripts": [
        {   
                    "matches": ["http://*/*", "https://*/*", "*://*/*.htm*"],
            "exclude_matches": ["*://*.wikipedia.org/*",
                                "*://*/*.*"], /* below script's matches */
                        "css": ["style.css"],
                         "js": ["jquery.js", 
                                "jquery-ui.js",
                                "js/processImages.js"]
        },
        {   
            "matches": ["*://*/*.*"],
            "exclude_matches": ["*://*/*.htm*"],
                "css": ["style.css"],
                 "js": ["jquery.js", "js/detailImage.js"]
        }
    ],

    "web_accessible_resources": ["style.css"]
}
